<Page
    x:Class="AppBand.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:AppBand"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <TextBlock x:Name="txtEventCount" HorizontalAlignment="Left" Margin="203,65,0,0" TextWrapping="Wrap" Text="0" VerticalAlignment="Top"/>
        <Button x:Name="btnStart" Content="Start" HorizontalAlignment="Left" Margin="45,231,0,0" VerticalAlignment="Top" Click="button_Click" Width="269"/>
        <TextBlock x:Name="lblEventCount" HorizontalAlignment="Left" Margin="45,65,0,0" TextWrapping="Wrap" Text="Event Count:" VerticalAlignment="Top"/>
        <TextBlock x:Name="lblStatus" HorizontalAlignment="Left" Margin="45,40,0,0" TextWrapping="Wrap" Text="Status:" VerticalAlignment="Top"/>
        <TextBlock x:Name="txtStatus" HorizontalAlignment="Left" Margin="203,40,0,0" TextWrapping="Wrap" Text="Not Connected..." VerticalAlignment="Top"/>
        <TextBlock x:Name="lblCoorX" HorizontalAlignment="Left" Margin="45,90,0,0" TextWrapping="Wrap" Text="Coordinate X:" VerticalAlignment="Top"/>
        <TextBlock x:Name="lblCoorY" HorizontalAlignment="Left" Margin="45,115,0,0" TextWrapping="Wrap" Text="Coordinate Y:" VerticalAlignment="Top"/>
        <TextBlock x:Name="lblCoorZ" HorizontalAlignment="Left" Margin="45,140,0,0" TextWrapping="Wrap" Text="Coordinate Z:" VerticalAlignment="Top"/>
        <TextBlock x:Name="txtCoorX" HorizontalAlignment="Left" Margin="203,90,0,0" TextWrapping="Wrap" Text="0" VerticalAlignment="Top"/>
        <TextBlock x:Name="txtCoorY" HorizontalAlignment="Left" Margin="203,115,0,0" TextWrapping="Wrap" Text="0" VerticalAlignment="Top"/>
        <TextBlock x:Name="txtCoorZ" HorizontalAlignment="Left" Margin="203,140,0,0" TextWrapping="Wrap" Text="0" VerticalAlignment="Top"/>

    </Grid>
</Page>
